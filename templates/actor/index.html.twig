{% extends 'base.html.twig' %}

{% block title %}Actor index{% endblock %}

{% block body %}
    <h1>Actor index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actor in actors %}
            <tr class="text-dark">
                <td>{{ actor.id }}</td>
                <td>{{ actor.name }}</td>
                <td>
                    {% if ('https://' in actor.poster) or ('http://' in actor.poster) %}
                        <img class"actorPoster w-25" src="{{ actor.poster }}" alt="{{ actor.name }} poster">
                    {% else %}
                        <img class"actorPoster w-25" src="/uploads/seasons/posters/{{ actor.poster }}" alt="{{ actor.poster }} poster">
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('actor_show', {'id': actor.id}) }}">show</a>
                    <a href="{{ path('actor_edit', {'id': actor.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('actor_new') }}">Create new</a>
{% endblock %}