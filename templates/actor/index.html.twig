        </thead>
        <tbody>
        {% for actor in actors %}
            <tr class="text-dark">

                <td>{{ actor.name }}</td>
                <td>
                    {% if ('https://' in actor.poster) or ('http://' in actor.poster) %}
                        <img class"actorPoster w-25" src="{{ actor.poster }}" alt="{{ actor.name }} poster">
                    {% else %}
                        <img class"actorPoster w-25" src="/uploads/seasons/posters/{{ actor.poster }}" alt="{{ actor.poster }} poster">
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('actor_show', {'id': actor.id}) }}">show</a>
                    <a href="{{ path('actor_edit', {'id': actor.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('actor_new') }}">Create new</a> #}


    <div class="container">
        {# Only for admin and author for add new actor #}
        {% if is_granted("ROLE_ADMIN") or is_granted("ROLE_CONTRIBUTOR") %}
            <a class="buttonAddActor btn btn-success btn-sm" href="{{ path("season_new", { seriesSlug: series.slug, seriesId: series.id }) }}">Add new season</a>
        {% endif %}
        <h1>All actors</h1>
        <div class="body">
            <div class="casting">
                {% for actor in actors %}
                    <div class="castingPosters">
                        {% if actor.poster %}
                            <a class="actor" href="{{ path('actor_show', { id: actor.id }) }}"><img class="actorPoster" src="{{ actor.poster }}" alt="{{ actor.name }} poster"></a>
                        {%  else %}
                            <a class="actor" href="{{ path('actor_show', { id: actor.id }) }}"><img class="actorPoster" src="{{ asset('build/no-image.png') }}" alt="{{ actor.name }} poster"></a>
                        {% endif %}
                        <a class="actorName" href="{{ path('actor_show', { id: actor.id }) }}">{{ actor.name }}</a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
