<header>
    <a class="titleHeader" href="/"><img src="{{ asset('build/logo.svg') }}" alt="wild series logo">Wild-Series</a>
    <div class="logHeader">
        {% if app.user %}
            <div class="userMailHeader">{{ app.user.email }}</div>
            <a class="logoutHeader" href="{{ path('app_logout') }}">Log Out</a>
        {% else %}
            <a class="loginHeader" href="{{ path('app_login') }}">Log In</a>
            <a class="registerHeader" href="{{ path('app_register') }}">Register</a>
        {% endif %}
    </div>
</header>
