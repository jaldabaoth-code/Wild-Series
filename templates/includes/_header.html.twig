<header>
    <a class="title" href="/"><img src="{{ asset('build/logo.svg') }}" alt="wild series logo">Wild-Series</a>
    <div class="log">
        {% if app.user %}
            <div class="userMail">{{ app.user.email }}</div>
            <a class="logOut" href="{{ path('app_logout') }}">Log Out</a>
        {% else %}
            <a class="logIn" href="{{ path('app_login') }}">Log In</a>
            <a class="register" href="{{ path('app_register') }}">Register</a>
        {% endif %}
    </div>
</header>
