{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('series') }}
{% endblock %}

{% block title %}All Series{% endblock %}

{% block body %}
    <div class="allSeries">
        <h1>
            {% if search == '' %}
                All Series
            {% else %}
                Result for : {{ search }}
            {% endif %}
        </h1>
        <div class="seriesBody">
            {% for serie in series %}
                <div class="eachSeries">
                    <a class="shineSeriesPoster" href="{{ path("serie_show", { slug: serie.slug }) }}">
                        <img src="{{ serie.poster }}" alt="poster of {{ serie.title }}">
                    </a>
                    <div class="rectificationButtons">
                        <!-- Edit series button -->
                        <a class="buttonEditSeries btn btn-primary btn-sm" href="{{ path("serie_edit", { slug: serie.slug }) }}" type="button" >Edit</a>
                        <!-- Delete series button -->
                        <form class="formDeleteSeries" method="post" action="{{ path('serie_delete', {'id': serie.id}) }}" onsubmit="return confirm('Are you sure you want to delete the series : {{ serie.title }} ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ serie.id) }}">
                            <button class="buttonDeleteSeries btn btn-danger btn-sm">Delete</button>
                        </form>
                    </div>
                    <a class="seriesTitle" href="{{ path("serie_show", { slug: serie.slug }) }}">{{ serie.title }}</a>
                    {% if serie.category.name is defined %}
                        <a class="categoryName" href="{{ path("category_show", { categoryName: serie.category.name }) }}">{{ serie.category.name }}</a>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
