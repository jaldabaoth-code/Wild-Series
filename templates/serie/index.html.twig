{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('series') }}
{% endblock %}

{% block title %}All Series{% endblock %}

{% block body %}
    {# Only for admin and author for add new series #}
    {% if is_granted("ROLE_ADMIN") or is_granted("ROLE_CONTRIBUTOR") %}
        <a class="buttonAddSeries btn btn-success btn-sm col-2 mb-5" href="{{ path("serie_new") }}">Add new Series</a>
    {% endif %}
    <div class="container">
        <h1>
            {% if search == '' %}
                All Series
            {% else %}
                Result for : {{ search }}
            {% endif %}
        </h1>
        <div class="body">
            {% for oneSeries in series %}
                <div class="oneSeries">
                    <a class="shinePoster" href="{{ path("serie_show", { slug: oneSeries.slug }) }}">
                        <img src="{{ oneSeries.poster }}" alt="poster of {{ oneSeries.title }}">
                    </a>
                    {# Only for admin and author for edit or delete series #}
                    {% if is_granted("ROLE_ADMIN") or is_granted("ROLE_CONTRIBUTOR") %}
                        <div class="rectificationButtons">
                            <!-- Edit series button -->
                            <a class="buttonEdit btn btn-primary btn-sm" href="{{ path("serie_edit", { slug: oneSeries.slug }) }}" type="button">Edit</a>
                            <!-- Delete series button -->
                            <form class="formDelete" method="post" action="{{ path('serie_delete', { 'id': oneSeries.id }) }}" onsubmit="return confirm('Are you sure you want to delete the series : {{ oneSeries.title }} ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ oneSeries.id) }}">
                                <button class="buttonDelete btn btn-danger btn-sm">Delete</button>
                            </form>
                        </div>
                    {% endif %}
                    <a class="title" href="{{ path("serie_show", { slug: oneSeries.slug }) }}">{{ oneSeries.title }}</a>
                    {% if oneSeries.category.name is defined %}
                        <a class="categoryName" href="{{ path("category_show", { categoryName: oneSeries.category.name }) }}">{{ oneSeries.category.name }}</a>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
