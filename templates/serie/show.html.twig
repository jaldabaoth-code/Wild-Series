{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('series') }}
{% endblock %}

{% block title %}{{ series.title }}{% endblock %}

{% block body %}
    <div class="showSeries">
        <h1>{{ series.title }}</h1>
        <div class="seriesMain">
            {% if ('https://' in series.poster) or ('http://' in series.poster) %}
                <img class"seriesPoster"  src="{{ series.poster }}" alt="{{ series.title }} poster">
            {% else %}
                <img class"seriesPoster" src="/uploads/series/poster/{{ series.poster }}" alt="{{ series.title }} poster">
            {% endif %}
            <div class="seriesInformations">
                <p>Title :
                    <a href="{{ path("serie_show", { slug: series.slug }) }}">{{ series.title }}</a>
                    {% if app.user %}
                        <a id="watchlist" href="{{ path('serie_watchlist', { id: series.id }) }}">
                            <i class="ms-3 bi {{ app.user.isInWatchlist(serie) ? 'bi-heart-fill' : 'bi-heart' }}"></i>
                        </a>
                    {% endif %}
                </p>
                <p>Date : {{ series.year }}</p>
                <p>Category :
                    <a href="{{ path("category_show", { categoryName: series.category.name }) }}">{{ series.category.name }}</a>
                </p>
                <p>Country : {{ series.country }}</p>
                <p>Actors :
                    {% for actor in seasons[0].actors|slice(0, 4) %}
                        <a href="{{ path('actor_show', { id: actor.id }) }}">{{ actor.name }}</a>
                        {# Not , after last actor name #}
                        {{ (loop.index < 4) ? ',' : '' }}
                    {% else %}
                        &#160;Aucun acteur pour cette sÃ©rie
                    {% endfor %}
                </p>

                <div class="dropdown-toggle" role="button" data-bs-toggle="dropdown">
                    Seasons : {{ seasons|length }} seasons
                </div>
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    {% for season in seasons %}
                        <a class="dropdown-item" href="{{ path('serie_season_show', { slug: series.slug, seasonId: season.id }) }}">Season
                            {{ season.number }}
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div>
            <p class="description">{{ series.description }}</p>
            <div class="descriptionImage">
                {% if ('https://' in series.image) or ('http://' in series.image) %}
                    <img class="seriesImage" src="{{ series.image }}" alt="{{ series.title }} image">
                {% else %}
                    <img class="seriesImage" src="/uploads/series/images/{{ series.image }}" alt="{{ series.title }} image">
                {% endif %}
            </div>
        </div>
        {# Only for admin and and the author #}
        {% if is_granted("ROLE_ADMIN") %}
            <a href="{{ path('serie_edit', { 'slug': series.slug }) }}">Edit</a>
        {% endif %}
    </div>
{% endblock %}
