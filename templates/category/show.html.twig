{% extends 'base.html.twig' %}
{% block title %} All programs in category {% endblock %}

{% block body %}
    {% if programs %}
        <h1 class="my-5">Les 3 dernières séries de la catégorie :
            {{ programs.0.category.name }}</h1>
        {% for program in programs %}
            <div class="my-5">
                <h2>{{ program.id }}
                    /
                    <a href="{{ path("program_show", { 'slug': program.slug }) }}">{{ program.title }}</a>
                </h2>
                <p>{{ program.summary }}</p>
            </div>
        {% else %}
            Aucune série trouvée.
        {% endfor %}
    {% endif %}

    <a href="{{ path('category_index') }}">
        Retour à la liste des catégories
    </a>
{% endblock %}
