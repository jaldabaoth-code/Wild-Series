
{% extends 'base.html.twig' %}
{% block body %}

    <div class="container">
        <h1 class="my-5">{{program.title}}</h1>
        <img class="my-5" src="{{program.poster}}" alt="{{ program.title }}">
        <h2 class="my-3">Saison {{ season.number }} ({{ season.year }})</h2>
        <p>{{ season.description }}</p>

        <p>Liste des épisodes:</p>
        <ul>
            {% for episode in episodes %}
                <li><a href="{{ path('program_episode_show', {programSlug: program.slug, seasonId: season.id, episodeSlug: episode.slug}) }}">
                Episode {{ episode.number }} -- avec le titre de l'episode : {{ episode.title }}</a></li>
            {% endfor %}
        </ul>
    </div>


    <div class="d-flex flex-column align-items-center">
        {{ dump(season.actors) }}
        <strong class="text-center">CASTING :</strong>
        <div class="col-8 d-flex row">
            {% for actor in season.actors %}
                <div class="col-2">
                    {% if actor.poster %}
                        <img class="col" src="{{ actor.poster }}">
                    {%  else %}
                        <img class="w-100" src="{{ asset('build/no-image.png') }}">
                    {%endif%}
                    <a href="{{ path('actor_show', {id: actor.id}) }}">{{ actor.name }}</a>
                </div>
            {% else %}
                <div>Aucun acteur pour cette série</div>
            {% endfor %}
        </div>
    </div>


{% endblock %}